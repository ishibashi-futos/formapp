{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet build",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "run",
      "command": "dotnet run",
      "type": "shell"
    },
    {
      "label": "publish",
      "command": "dotnet publish --configuration=Release -r win10-x64 --self-contained=true /p:PublishSigleFile=true",
      "type" : "shell"
    }
  ]
}
